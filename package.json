{
  "name": "simulacra-monorepo",
  "version": "0.0.6",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/core && npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "typecheck": "npm run build --workspaces",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "harness": "npm run build && node examples/node-harness.mjs",
    "test": "npm run test --workspaces --if-present",
    "precommit": "npm run lint && npm run format:check && npm run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1"
  }
}
